# SSH client configuration (lean defaults; override in ~/.ssh/config.local)

# Load local host-specific entries first so they can override Host * defaults.
# Missing include paths are ignored by OpenSSH.
Include ~/.ssh/config.local ~/.ssh/config.local.d/*.conf

Host *
  IdentityFile ~/.ssh/id_ed25519
  IdentitiesOnly yes
  AddKeysToAgent yes
  UseKeychain yes
  ForwardAgent no
  ServerAliveInterval 60
  ServerAliveCountMax 3
  ControlMaster auto
  ControlPersist 5m
  ControlPath ~/.ssh/sockets/%r@%h:%p
  HashKnownHosts yes
  GSSAPIAuthentication no
